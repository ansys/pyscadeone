[flake8]
exclude = *.pyc, .venv, __init__.py, dist, doc/source/examples, doc/_build, .git
# To be added after refactoring code to be compliant: E501 
select = W504, W191, W291, W293, W391, E115, E117, E122, E124, E125, E225, E231, E301, E303, E501, F401, F403
# for Black
extend-ignore = E203 W503
count = True
max-complexity = 10
max-line-length = 100
statistics = True
doctests = True